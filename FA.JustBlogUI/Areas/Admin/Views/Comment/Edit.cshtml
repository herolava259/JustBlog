@model CommentModel;

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-5">
    <div class="row">
        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control"></input>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommentHeader" class="control-label"></label>
                        <input asp-for="CommentHeader" class="form-control" />
                        <span asp-validation-for="CommentHeader" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommentText" class="control-label"></label>
                        <textarea asp-for="CommentText" type="text" class="form-control"></textarea>
                        <span asp-validation-for="CommentText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommentTime" class="control-label"></label>
                        <input asp-for="CommentTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="CommentTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostId" class="control-label"></label>
                        <select asp-for="PostId" class="form-control" asp-items="ViewBag.Comment"></select>
                        <span asp-validation-for="PostId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-outline-dark">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>