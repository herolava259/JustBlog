@model CommentModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <div class="card mt-5">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Thông tin chi tiết</h4>
                </div>
            </div>
        </div>

        <!-- row -->
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CommentHeader)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CommentHeader)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CommentText)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.CommentText)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CommentTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CommentTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostId)
                </dt>
                <dd class="col-sm-10">
                    @ViewBag.commentpost
                </dd>
            </dl>
        </div>
    </div>
</div>
<div>

    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">Edit</a>

    <a asp-action="Index" class="btn btn-outline-dark">Trở về</a>
</div>
