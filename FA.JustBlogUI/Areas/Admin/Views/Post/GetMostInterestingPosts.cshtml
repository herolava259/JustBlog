@model IEnumerable<PostModel>;

@{
    ViewData["Title"] = "GetMostInterestingPosts";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>GetMostInterestingPosts</h1>

<div class="card">

    <div class="card-header">
        <h3 class="card-title">Danh sách công ty</h3>
    </div>
    <div class="card-header">
        <a href="@Url.Action("Create","Post")" class="btn btn-primary float-left">
            <i class="fas fa-plus"></i> Thêm bài viết
        </a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Url slug</th>
                    <th>Description</th>
                    <th>Posted On</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.OrderByDescending(x => x.Rate))
                {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.UrlSlug</td>
                            <td>@item.ShortDescription</td>
                            <td>@item.PostedOn</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary ">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary ">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger ">Delete</a>
                            </td>
                        </tr>
                }

        </table>
    </div>
    <!-- /.card-body -->
</div>

<script>
    $(function() {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });
</script>